{
  "name": "@recipesage/frontend",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ionic serve --no-open --host 0.0.0.0 --disableHostCheck --no-livereload -- --host 0.0.0.0 --disable-host-check --no-live-reload",
    "build": "ionic build --prod && workbox injectManifest",
    "build:selfhost": "ionic build --configuration=selfhost && workbox injectManifest",
    "test": "",
    "lint": "npm run lint:eslint && npm run lint:translations",
    "lint:eslint": "ng lint",
    "lint:translations": "npx --yes @julianpoy/ngx-translate-lint --config ./ngx-translate-lint.config.json"
  }
}
