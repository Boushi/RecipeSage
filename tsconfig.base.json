{
  "compilerOptions": {
    "strict": true,
    "sourceMap": true,
    "declaration": false,
    "module": "esnext",
    "moduleResolution": "nodenext",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "importHelpers": true,
    "target": "es6",
    "typeRoots": [
      "node_modules/@types",
      "packages/*/node_modules/@types"
    ],
    "lib": [
      "esnext"
    ]
  }
}
